<div class="container mt-5">
    <h2 class="text-center">Lista de Reservas</h2>
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Clase</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% reservations.forEach(reservation => { %>
                    <tr>
                        <td><%= reservation.id %></td>
                        <td><a href="/users/<%= reservation.user_id %>"><%= reservation.User.name %></a></td>
                        <td><a href="/classes/<%= reservation.class_id %>"><%= reservation.Class.name %></a></td>
                        <td><%= reservation.date %></td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a href="/reservations/<%= reservation.id %>/edit" class="btn btn-primary btn-sm mr-2">Editar</a>
                                <form action="/reservations/<%= reservation.id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <a href="/reservations/new" class="btn btn-primary mt-3">Crear Nueva Reserva</a>
</div>
