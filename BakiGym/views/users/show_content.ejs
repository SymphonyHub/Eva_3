<section>
    <h2>Detalle de Usuario</h2>
    <p>Nombre: <%= user.name %></p>
    <p>Email: <%= user.email %></p>
    <a href="/users/<%= user.id %>/edit">Editar</a>
    <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
        <button type="submit">Eliminar</button>
    </form>
</section>
